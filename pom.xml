  <build>

		<plugins>

			<plugin>

				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<compilerVersion>1.8</compilerVersion>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			
			

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.17</version>
				
			</plugin>
			
			<plugin>
				<groupId>net.masterthought</groupId>
				<artifactId>maven-cucumber-reporting</artifactId>
				<version>3.8.0</version>
				<executions>
					<execution>
						<id>execution</id>
						<!-- <phase>verify</phase> -->
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<projectName>Admin Builder</projectName>
							<outputDirectory>target/cucumber-reports/advanced-reports</outputDirectory>
							<cucumberOutput>target/cucumber-reports/CucumberTestReport.json</cucumberOutput>
							<buildNumber>1</buildNumber>
							<parallelTesting>false</parallelTesting>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			
			
             <plugin>
      <groupId>com.github.temyers</groupId>
      <artifactId>cucumber-jvm-parallel-plugin</artifactId>
      <version>5.0.0</version>
      <executions>
        <execution> 
        <id>generateRunners</id>
          				<phase>generate</phase>
						<goals>
						
       					 <goal>generateRunners</goal>
         				 </goals> 
         <configuration>  
          <glue>com.adminbuilder.stepDefinition</glue>
           <outputDirectory>src/test/java/com/adminbuilder/Runner</outputDirectory>
           <featuresDirectory>src/test/java/com/adminbuilder/features</featuresDirectory>
           <cucumberOutputDir>target/cucumber</cucumberOutputDir>
           <format>json</format>
           <strict>true</strict>
           <monochrome>true</monochrome> 
           <useTestNG>false</useTestNG>
           <namingScheme>simple</namingScheme>
           
           <parallelScheme>FEATURE</parallelScheme></configuration>
        
        </execution>
         
     
      </executions>
    </plugin>

		</plugins>
		

	</build>

</project>

	
	
